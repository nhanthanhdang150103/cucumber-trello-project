{
  "default": {
    "require": [
      "features/step_definitions/*.js",
      "features/hooks/*.js"
    ],
    "formatOptions": {
      "snippetInterface": "synchronous"
    },
    "paths": ["features/*.feature"],
    "defaultTimeout": 30000
  },
  "trello": {
    "require": [
      "features/step_definitions/trelloLoginSteps.js",
      "features/hooks/trelloHooks.js"
    ],
    "formatOptions": {
      "snippetInterface": "synchronous"
    },
    "paths": ["features/*.feature"],
    "defaultTimeout": 60000,
    "publishQuiet": true,
    "requireModule": [],
    "strict": true
  },
  "trello-ts": {
    "require": [ "features/step_definitions/trelloLoginSteps.ts",
     "features/hooks/trelloHooks.js"           
    ],
    "requireModule": ["ts-node/register"],
    "formatOptions": {
      "snippetInterface": "synchronous"
    },
    "paths": ["features/trelloLogin.feature"],
    "defaultTimeout": 60000,
    "publishQuiet": true,
    "strict": true
  }
}