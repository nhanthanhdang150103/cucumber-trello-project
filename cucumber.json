
{
  "default": {
    "require": [
      "features/step_definitions/*.js",
      "features/hooks/*.js"
    ],
    "format": [
      "json:cucumber-report/cucumber.json"
    ],
    "formatOptions": {
      "snippetInterface": "synchronous"
    },
    "paths": ["features/*.feature"],
    "defaultTimeout": 30000
  },
  "trello": {
    "require": [
      "features/step_definitions/trelloLoginSteps.js",
      "features/hooks/trelloHooks.js",
      "features/step_definitions/createBoardSteps.js"
    ],
    "format": [
      "json:cucumber-report/cucumber.json"
    ],
    "formatOptions": {
      "snippetInterface": "synchronous"
    },
    "paths": ["features/*.feature"],
    "defaultTimeout": 60000,
    "publishQuiet": true,
    "requireModule": [],
    "strict": true
  }
}
